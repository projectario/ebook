<div class="form">
    <form action="" method="post">

        <label for="title">Title:</label>
        <input type="text" id="title" name="title" placeholder="title here..."><br />
        
        <label for="author">Author:</label>
        <input type="text" id="author" name="author" placeholder="author here..."><br />
        
        <label for="genre">Genre:</label>
        <input type="text" id="genre" name="genre" placeholder="genre..."><br />

        <label for="price">Price:</label>
        <input type="text" id="price" name="price" placeholder="price..."><br />
        
        <label for="description">Description:</label>
        <textarea id="description" name="description"></textarea><br />
    
        <label for="language">Language:</label>
        <input type="text" id="language" name="language" placeholder="ex: english, french..."><br />
        
        <label for="releasedYear">Released Year:</label>
        <input type="text" id="releasedYear" name="releasedYear" placeholder="e.g. 1991"><br />

        <label for="rating">Rating:</label>
        <input type="text" id="rating" name="rating"  placeholder="from 0.1 to 5"><br />

        <label for="isBestSeller">Best Seller:</label>
        <select id="isBestSeller" name="isBestSeller">
           <option value="true">True</option>
           <option value="false">False</option>
        </select><br/>
        <label for="isEditorChoice">Editor Choice:</label>
        <select id="isEditorChoice" name="isEditorChoice">
           <option value="true">True</option>
           <option value="false">False</option>
        </select><br/>

        <label for="movieId">Movie ID:</label>
        <input type="text" id="movieId" name="movieId" placeholder="ID of movieclub item"><br />

        <button class="btn btn-form">Create</button>
    </form>

</div>