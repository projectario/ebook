<head>
  <link
    rel="stylesheet"
    href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css"
    integrity="sha384-AYmEC3Yw5cVb3ZcuHtOA93w35dYTsvhLPVnYs9eStHfGJvOvKxVfELGroGkvsg+p"
    crossorigin="anonymous"
  />
  <link rel="manifest" href="/site.webmanifest" />
</head>
<div class="navbar">
  <div class="navbar__logo">
    <a href="/"><i class="fas fa-atlas"></i>eBook</a>
  </div>
  <form class="navbar__search">
    <input
      type="text"
      name="searchBook"
      class="searchBook"
      placeholder="Search..."
    />
    <!-- <button type="submit"><i class="fas fa-search"></i></button> -->
  </form>
  <div class="navbar__options">
    <div class="navbar__faq"><a href="/">FAQ</a></div>
    <div class="navbar__signup"><a href="/">Sign Up</a></div>
    <div class="navbar__login"><a href="/logout">Log In</a></div>
  </div>
</div>

<header class="header">
  <div class="landing">
    <!-- <h3 class="quote">Endless entertainment and knowledge in your pocket</h3> -->
    <h3 class="sub-heading">
      eBook means <span class="typed-text"></span
      ><span class="cursor">&nbsp;</span>
    </h3>
  </div>
</header>

<main class="container">
  <section class="genreOptions">
    <h3 class="sectionHeader">BROWSE GENRES</h3>
    <div class="container_Section genreOptionsList">
      <a class="genreCard genreCard_Fantasy" href="">
        <h4 class="genreTitle">FANTASY</h4>
      </a>
      <a class="genreCard genreCard_Romance" href="">
        <h4 class="genreTitle">ROMANCE</h4>
      </a>
      <a class="genreCard genreCard_Action" href="">
        <h4 class="genreTitle">ACTION & ADVENTURE</h4>
      </a>
      <a class="genreCard genreCard_SciFi" href="">
        <h4 class="genreTitle">SCIENCE FICTION</h4>
      </a>
      <a class="genreCard genreCard_Mystery" href="">
        <h4 class="genreTitle">MYSTERY</h4>
      </a>
      <a class="genreCard genreCard_Childer" href="">
        <h4 class="genreTitle">CHILDREN'S & COMICS</h4>
      </a>
      <a class="genreCard genreCard_Thriller" href="">
        <h4 class="genreTitle">THRILLER & SUSPENSE</h4>
      </a>
      <a class="genreCard genreCard_History" href="">
        <h4 class="genreTitle">HISTORY</h4>
      </a>
      <a class="genreCard genreCard_Educational" href="">
        <h4 class="genreTitle">EDUCATIONAL</h4>
      </a>
    </div>
  </section>

  <section class="bestSellers">
    <h3 class="sectionHeader">BEST SELLERS</h3>
    <div class="container_Section">
      <!-- an eBook to repeat -->
      <% for(i=0; i<10; i++) {%>
      <div class="bookCard">
        <img src="/images/eBooksImg/51SZX1BvX6L.jpg" alt="" />
        <p class="bookTitle">A Shifter's Curse</p>
        <p class="bookAuthor">Raven Steele</p>
        <div class="bookDetails">
          <span class="bookRating">Rating: 4.5</span>
          <span class="bookBS"> BS <i class="fas fa-star"></i></span>
          <span class="bookEC"> EC <i class="fas fa-bookmark"></i></span>
        </div>
      </div>
      <% } %>
      <!-- end of ebook -->
    </div>
  </section>

  <section class="editorsChoise">
    <h3 class="sectionHeader">EDITOR'S CHOICE</h3>
    <div class="container_Section">
      <!-- an eBook to repeat -->
      <% for(i=0; i<10; i++) {%>
      <div class="bookCard">
        <img src="/images/eBooksImg/51SZX1BvX6L.jpg" alt="" />
        <p class="bookTitle">A Shifter's Curse</p>
        <p class="bookAuthor">Raven Steele</p>
        <div class="bookDetails">
          <span class="bookRating">Rating: 4.5</span>
          <span class="bookBS"> BS <i class="fas fa-star"></i></span>
          <span class="bookEC"> EC <i class="fas fa-bookmark"></i></span>
        </div>
      </div>
      <% } %>
      <!-- end of ebook -->
    </div>
  </section>
</main>
